<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainMenuController">
   <children>
      <Label layoutX="15.0" text="Inventory Management System">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </Label>
      <Pane layoutX="50.0" layoutY="35.0" prefHeight="300.0" prefWidth="500.0" style="-fx-border-color: gray; -fx-border-radius: 10;">
         <children>
            <Label layoutX="25.0" layoutY="20.0" text="Parts">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="partTableView" layoutX="15.0" layoutY="50.0" prefHeight="175.0" prefWidth="460.0">
              <columns>
                <TableColumn fx:id="partIDCol" prefWidth="75.0" text="Part ID" />
                <TableColumn fx:id="partNameCol" prefWidth="135.0" text="Part Name" />
                  <TableColumn fx:id="partInvCol" prefWidth="120.0" text="Inventory Level" />
                  <TableColumn fx:id="partPriceCol" prefWidth="135.0" text="Price/ Cost per Unit" />
              </columns>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </TableView>
            <Button fx:id="delPartBtn" layoutX="415.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionDelPart" prefHeight="30.0" prefWidth="60.0" text="Delete" />
            <Button fx:id="modPartBtn" layoutX="339.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionModifyPart" prefHeight="30.0" prefWidth="60.0" text="Modify" />
            <Button fx:id="addPartButton" layoutX="262.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionAddPart" prefHeight="30.0" prefWidth="60.0" text="Add" />
            <TextField fx:id="searchPartsField" layoutX="325.0" layoutY="18.0" onAction="#onActionMainPartSearch" />
            <Label fx:id="searchLabelL" layoutX="280.0" layoutY="22.0" text="Search:" />
         </children>
      </Pane>
      <Pane layoutX="650.0" layoutY="35.0" prefHeight="300.0" prefWidth="500.0" style="-fx-border-color: gray; -fx-border-radius: 10;">
         <children>
            <Label layoutX="25.0" layoutY="20.0" text="Products">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="productTableView" layoutX="15.0" layoutY="50.0" prefHeight="175.0" prefWidth="460.0">
               <columns>
                  <TableColumn fx:id="productIDCol" prefWidth="75.0" text="Product ID" />
                  <TableColumn fx:id="productNameCol" prefWidth="135.0" text="Product Name" />
                  <TableColumn fx:id="productInvCol" prefWidth="120.0" text="Inventory Level" />
                  <TableColumn fx:id="productPriceCol" prefWidth="135.0" text="Price/ Cost per Unit" />
               </columns>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </TableView>
            <Button fx:id="delProductBtn" layoutX="415.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionDelProduct" prefHeight="30.0" prefWidth="60.0" text="Delete" />
            <Button fx:id="modProductBtn" layoutX="339.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionModifyProduct" prefHeight="30.0" prefWidth="60.0" text="Modify" />
            <Button fx:id="addProductBtn" layoutX="262.0" layoutY="247.0" mnemonicParsing="false" onAction="#onActionAddProduct" prefHeight="30.0" prefWidth="60.0" text="Add" />
            <TextField fx:id="searchProductsField" layoutX="325.0" layoutY="18.0" onAction="#onActionMainProductSearch" />
            <Label fx:id="searchLabelLR" layoutX="273.0" layoutY="25.0" text="Search:" />
         </children>
      </Pane>
      <Button layoutX="1090.0" layoutY="350.0" mnemonicParsing="false" onAction="#onActionExitMain" prefHeight="30.0" prefWidth="60.0" text="Exit" />
   </children>
</AnchorPane>
